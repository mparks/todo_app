<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report
            id="report_todo_task_action"
            string="To-do Tasks"
            model="todo.task"
            report_type="qweb-html"
            name="todo_kanban.report_todo_task_template"
        />

        <template id="report_todo_task_template">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="report.external_layout">
                    <div class="page">
                        <!-- Report page content -->
                        <h2 t-field="o.name" />
                        <p t-field="o.user_id.name" />
                        <ul>
                          <t t-foreach="o.message_follower_ids" t-as="f">
                            <li>
                                <img t-if="f.image_small" t-att-src="'data:image/png;base64,%s' % f.image_small" style="max-height: 45px;"/>
                                <span t-field="f.name" />
                            </li>
                          </t>
                        </ul>
                        <div t-field="res_company.partner_id"
                             t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                    </div>
                    </t>
                </t>
            </t>
        </template>

    </data>
</openerp>
